<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cryptoVerifier.MainActivity"
    android:fitsSystemWindows="true"


    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:background="@drawable/compare_qrs_1"
        android:id="@+id/linearLayout1">

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/compare_qrs_2"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout1"

        >



        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:id="@+id/b_1"
            android:src="@drawable/scan_main_qr"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:layout_marginTop="25sp"
            android:layout_marginBottom="10sp"
            android:layout_below="@+id/linearLayout"
            android:layout_alignRight="@+id/linearLayout"
            android:layout_alignEnd="@+id/linearLayout"
            />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:id="@+id/b_2"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:layout_marginBottom="10sp"
            android:layout_below="@+id/linearLayout"
            android:layout_alignRight="@+id/linearLayout"
            android:layout_alignEnd="@+id/linearLayout"
            />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4"
        android:background="@drawable/compare_qrs_2"
        android:layout_below="@+id/linearLayout2"
        android:layout_above="@+id/linearLayout3"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:id="@+id/textView" />

        <ExpandableListView
            android:id="@+id/expandable_list"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="right"

            />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:id="@+id/linearLayout3"
        android:background="@drawable/compare_qrs_3">

    </LinearLayout>

</RelativeLayout>
